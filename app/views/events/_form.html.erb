<%= form_with(model: event, local: true) do |form| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <!-- FORM BOOTSTRAP -->
  <div class="col-lg-3">

    <%= form.hidden_field(:user_id, :value => current_user.id) %>

    <div class="form-group">
      <%= form.label :start_date, class: "label-control" %>
      <%= form.datetime_select :start_date, class: "form-control datetimepicker" %>
    </div>



    <div class="field">
      <%= form.label :duration %>
      <%= form.number_field(:duration, in: 5...300, step: 5) %>
    </div>

    <div class="form-group label-floating">
      <%= form.label :title, class: "control-label" %>
      <%= form.text_field :title, class: "form-control" %>
    </div>
    <div class="form-group label-floating">
      <%= form.label :description, class: "control-label" %>
      <%= form.text_area :description, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :price, class: "control-label" %>
      <%= form.number_field(:price, in: 1...1000, step: 1)%>
    </div>

    <div class="form-group label-floating">
      <%= form.label :location, class: "control-label" %>
      <%= form.text_field :location, class: "form-control" %>
    </div>

    <%= form.submit "Create an event", class: "btn btn-default btn-primary" %>

  </div>
  <!--                 end inputs -->
<% end %>
