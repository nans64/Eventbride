<!-- Liste des events -->


<h2>Voici les events que tu as créé</h2>
<p id="notice"><%= notice %></p>
<div id="tables">
  <div class="title col-md-10 col-md-offset-1">
    <h1>Events</h1>
  </div>
  <div class="row">
    <div class="col-md-12">
      <div class="col-md-12">
        <div class="table-responsive">
          <table class="table">
            <thead>
            <tr>
              <th class="text-center">ID Event</th>
              <th class="text-center">Start date</th>
              <th class="text-center">Duration</th>
              <th class="text-center">Title</th>
              <th class="text-center">Description</th>
              <th class="text-center">Price</th>
              <th class="text-center">Location</th>
              <th class="text-center">Actions</th>
              <th colspan="3"></th>
            </tr>
            </thead>

            <tbody>
            <% @events.each do |event| %>
              <tr>
                <% if current_user == event.user then%>
                  <td class="text-center"><%= event.id %></td>
                  <td class="text-center"><%= event.start_date %></td>
                <td class="text-center"><%= event.duration %></td>
                <td class="text-center"><%= event.title %></td>
                <td class="text-center"><%= event.description %></td>
                <td class="text-center"><%= event.price %></td>
                <td class="text-center"><%= event.location %></td>
                <td><%= link_to 'Show', event, class: 'btn btn-primary btn-xs' %></td>
                <td><%= link_to 'Edit', edit_event_path(event), class: 'btn btn-info btn-xs'  %></td>
                <td><%= link_to 'Destroy', event, method: :delete, class: 'btn btn-danger btn-xs' %></td>
                  <%else end %>
              </tr>
            <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
